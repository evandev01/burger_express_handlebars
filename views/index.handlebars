<div class="col-md-6">
    <h1 id="burger-list">Burger Menu</h1>
    <ul class="burger-menu">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burgers devoured = true}}
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="col-md-6">
    <h1 id="burger-list">Devoured Burgers</h1>
    <ul class="burger-menu">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burgers devoured = false}}
        {{/if}}
        {{/each}}
    </ul>
</div>