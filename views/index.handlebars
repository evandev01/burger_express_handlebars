<div class="col-md-1"></div>
<div class="col-md-4">
    <h1>Burger Menu</h1>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burgers devoured = true}}
        {{/unless}}
        {{/each}}
    </ul>
</div>
<div class="col-md-2"></div>
<div class="col-md-4">
    <h1>Devoured Burgers</h1>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burgers devoured = false}}
        {{/if}}
        {{/each}}
    </ul>
</div>
<div class="col-md-1"></div>